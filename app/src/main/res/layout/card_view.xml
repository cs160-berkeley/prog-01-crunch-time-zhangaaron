<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exercise_photo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exercise_name"
            android:layout_toRightOf="@+id/exercise_photo"
            android:layout_alignParentTop="true"
            android:textSize="14sp"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exercise_value"
            android:layout_toRightOf="@+id/exercise_photo"
            android:layout_below="@+id/exercise_name"
            android:textSize="10sp"
            android:inputType="numberDecimal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/isReps"

            android:textSize="8sp"
            android:layout_alignEnd="@+id/exercise_value"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/exercise_value" />

    </RelativeLayout>

</android.support.v7.widget.CardView>